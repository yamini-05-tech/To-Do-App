def task():
    tasks = []  # empty list
    print("_____ WELCOME TO THE TASK MANAGEMENT APP _____")

    # initial tasks to add
    try:
        total_task = int(input("Enter how many tasks you want to add = "))
    except ValueError:
        print("Invalid number, starting with 0 initial tasks.")
        total_task = 0

    for i in range(1, total_task + 1):
        task_name = input(f"Enter task {i} = ")
        tasks.append(task_name)

    print(f"Today's tasks are:\n{tasks}\n")

    while True:
        try:
            operation = int(input(
                "Enter\n1 - Add\n2 - Update\n3 - Delete\n4 - View\n5 - Exit/Stop\nChoose operation = "
            ))
        except ValueError:
            print("Invalid input. Please enter a number between 1 and 5.\n")
            continue


        if operation == 1:
            add = input("Enter task you want to add = ")
            tasks.append(add)
            print(f"Task '{add}' has been successfully added...\n")

        elif operation == 2:
            updated_val = input("Enter the task name you want to update = ")
            if updated_val in tasks:
                up = input("Enter new task = ")
                ind = tasks.index(updated_val)
                tasks[ind] = up
                print(f"Updated task to '{up}'\n")
            else:
                print(f"Task '{updated_val}' not found.\n")

        elif operation == 3:
            del_val = input("Which task you want to delete = ")
            if del_val in tasks:
                ind = tasks.index(del_val)
                del tasks[ind]
                print(f"Task '{del_val}' has been deleted...\n")
            else:
                print(f"Task '{del_val}' not found.\n")

        elif operation == 4:
            print(f"Total tasks = {tasks}\n")

        elif operation == 5:
            print("Closing the app. Goodbye!")
            break

        else:
            print("Invalid Input. Please choose a number between 1 and 5.\n")
if __name__ == "__main__":
    task()

